{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"sourceMap": true,
		"outDir": "dist",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"declaration": true,
		"alwaysStrict": true,
		"lib": [
			"dom",
			"es2019"
		]
	},
	"ts-node": {
		"transpileOnly": true
	},
	"include": [
		"src/**/*.ts",
		"thirdparty.d.ts",
		"global.d.ts"
	],
	"exclude": [
		"node_modules/**/*"
	]
}