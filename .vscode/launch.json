{
    "version": "0.1.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Build & Launch",
            "program": "${workspaceFolder}/src/app.ts",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "args": [
                "--trace-warnings"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Tests Launch",
            "program": "${workspaceFolder}/src/test.ts",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "args": [
                "--trace-warnings"
            ]
        }
    ]
}